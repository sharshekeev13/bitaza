<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="50dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/welcome_page_button"
    android:elevation="3dp"
    tools:context=".ui.main.view.FragmentProfile">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/baseline_account_circle_primary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:contentDescription="account icon"
            />

        <TextView
            android:id="@+id/txtNameProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Name Name"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/profile_icon"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/emailAddressProfileFragemnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example@mail.com"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/txtNameProfileFragment"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/placeOnTopProfileFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Место в рейтинге: 1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailAddressProfileFragemnt" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toStartOf="@+id/counterProfileFragment"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@id/counterProfileFragment"
            android:src="@drawable/baseline_image_24"

            app:layout_constraintTop_toBottomOf="@+id/placeOnTopProfileFragment" />

        <TextView
            android:id="@+id/counterProfileFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="2000 успешно"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/placeOnTopProfileFragment" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profileFragmentCloseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/welcome_page_button"
            android:text="Закрыть"
            android:textAllCaps="false"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:layout_margin="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/counterProfileFragment"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>